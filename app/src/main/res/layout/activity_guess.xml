<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dell.navid.com.calculator.GuessActivity"
    android:id="@+id/activity_guess">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start"
        android:id="@+id/TV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:singleLine="true"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button21"
        android:layout_below="@+id/TV"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_toStartOf="@+id/button22"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button22"
        android:layout_alignTop="@+id/button21"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button23"
        android:layout_alignTop="@+id/button22"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_toEndOf="@+id/button22"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button24"
        android:layout_below="@+id/button21"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_alignEnd="@+id/button21"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button25"
        android:layout_alignTop="@+id/button24"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_toStartOf="@+id/button23"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button26"
        android:layout_alignTop="@+id/button25"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_toEndOf="@+id/button22"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button27"
        android:layout_below="@+id/button24"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_alignEnd="@+id/button24"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button28"
        android:layout_alignTop="@+id/button27"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_alignStart="@+id/button25"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button29"
        android:layout_below="@+id/button25"
        android:layout_alignEnd="@+id/button26"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_toEndOf="@+id/button25"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button30"
        android:layout_below="@+id/button27"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button29"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/button31"
        android:layout_below="@+id/button30"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/button28"
        android:clickable="false"
        android:enabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:id="@+id/button32"
        android:textSize="20dp"
        android:textColor="#ff70005b"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button33"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test!"
        android:id="@+id/button33"
        android:layout_below="@+id/button30"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button31"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReadMe!\nThis program chooses a number between1 and 100 and you have to guess that number"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:nestedScrollingEnabled="true"
        android:linksClickable="true"
        android:longClickable="true"
        android:autoText="true"
        android:elegantTextHeight="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:layout_above="@+id/button32"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button31"
        android:layout_alignEnd="@+id/button32"
        android:singleLine="false" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/activity_main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text= ""
        android:id="@+id/MainLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false"
        android:gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button"
        android:layout_below="@+id/MainLabel"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_above="@+id/button5"
        android:layout_toEndOf="@+id/button"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:layout_above="@+id/button5"
        android:layout_toEndOf="@+id/button2"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_gravity="center"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:layout_gravity="center"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/button5"
        android:layout_alignStart="@+id/button3"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_gravity="center"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button10"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_toStartOf="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button11"
        android:layout_below="@+id/MainLabel"
        android:textSize="25dp"
        android:textColor="#ffff3131"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button13"
        android:layout_above="@+id/button9"
        android:textSize="25dp"
        android:textColor="#ffff3131"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button14"
        android:layout_alignBottom="@+id/button9"
        android:textSize="25dp"
        android:layout_alignEnd="@+id/button13"
        android:layout_toEndOf="@+id/button9"
        android:textColor="#ffff3131" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="÷"
        android:id="@+id/button15"
        android:textSize="25dp"
        android:layout_below="@+id/button9"
        android:layout_alignEnd="@+id/button14"
        android:layout_toEndOf="@+id/button9"
        android:textColor="#ffff3131" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button16"
        android:textSize="25dp"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button8"
        android:textColor="#ffff3131" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/button17"
        android:textSize="25dp"
        android:layout_alignTop="@+id/button16"
        android:textColor="#ff1260ff"
        android:layout_alignEnd="@+id/GOTOG"
        android:layout_toEndOf="@+id/button19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/button18"
        android:textSize="25dp"
        android:layout_alignTop="@+id/button16"
        android:layout_toEndOf="@+id/button16"
        android:textColor="#ffff3131" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button12"
        android:layout_above="@+id/button17"
        android:layout_toEndOf="@+id/button10"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BackSpace"
        android:id="@+id/button19"
        android:textSize="11dp"
        android:textColor="#ff1260ff"
        android:layout_above="@+id/GOTOG"
        android:layout_toEndOf="@+id/button18"
        android:layout_alignTop="@+id/button17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="√"
        android:id="@+id/button20"
        android:layout_below="@+id/button16"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button18"
        android:textSize="25dp"
        android:textColor="#ff902162"
        android:layout_alignBottom="@+id/GOTOG" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cube"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:textOff="Square"
        android:textOn="Cube"
        android:layout_alignTop="@+id/button20"
        android:layout_toStartOf="@+id/button19"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess Number"
        android:id="@+id/GOTOG"
        android:layout_below="@+id/button17"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/toggleButton"
        android:textSize="17sp"
        android:textColor="#ff902162" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/toggleButton"
        android:layout_alignEnd="@+id/GOTOG"
        android:layout_alignStart="@+id/button20"
        android:layout_above="@+id/button34"
        android:textSize="20dp"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom"
        android:focusableInTouchMode="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button34"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textSize="25dp" />

</RelativeLayout>
